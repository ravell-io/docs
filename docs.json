{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Ravell",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["index", "quickstart", "asks"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "App",
          "href": "https://app.ravell.io",
          "icon": "rocket"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hi@ravell.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Open Ravell",
      "href": "https://app.ravell.io"
    }
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity", "mcp", "cursor", "vscode"]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/ravell-io"
    }
  }
