{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Ravell",
  "mode": "light",
  "modeToggle": {
    "default": "light",
    "isHidden": true
  },
  "colors": {
    "primary": "#18181b",
    "light": "#155dfc",
    "dark": "#084de2"
  },
  "favicon": "/favicon.svg",
  "logo": "/logo/light.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "groups": [
          {
            "group": "Start",
            "pages": ["index", "quickstart", "asks", "workspace-setup"]
          },
          {
            "group": "Features",
            "pages": ["inbox", "automations", "sources", "context", "profiles", "memory", "visibility-sharing", "shortcuts", "scoping-queries", "slack-agent"]
          },
          {
            "group": "Integrations",
            "pages": ["integrations/linear", "integrations/notion", "integrations/intercom", "integrations/slack"]
          },
          {
            "group": "API",
            "pages": ["api-reference/introduction", "api-reference/chats", "api-reference/queries", "api-reference/evidences", "api-reference/integrations"]
          },
          {
            "group": "Admin",
            "pages": ["billing", "workspace-management"]
          }
        ]
      }
    ]
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Open Ravell",
      "href": "https://app.ravell.io"
    }
  },
  "appearance": {
    "strict": true
  },
  "fonts": {
    "family": "Inter",
    "heading": {
      "family": "Inter"
    },
    "body": {
      "family": "Inter"
    }
  }
}
